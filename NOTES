registers: (32bit?)
  sp
  ip
  ra, rb, rc, rd, re, rf

flags:
  eq, ne, lt, gt, carry

numbers: (decimal)
  #0
  #100

numbers: (hex)
  $0
  $deadbeef

addresses: (hex)
  @ff
  @0
  dereference with *
    store *ra @b00b

instructions: (reverse polish notation?)
  nop
  halt
  push <src>
  pop
  mov <src> <dest>
    mov #100 ra
    mov #0 @ff
  cmp <a> <b>
    cmp *ra #0
  jmp, je, jne, jlt, jgt
  add <amount> <dest>
    add #100 re
    add #8 *re
  addc <dest> (amount + carry)
  dec <amount> <dest>
    dec #100 rf
    dec #8 *rf
  rotl <val> (sets carry, uses carry)
    rotl #2
    rotl *rc
  rotr <val> (sets carry, uses carry)
    rotr #2
    rotr *rc

video:
  request a terminal
    80x25 or more
  get a pointer back with the terminal memory (and size)
